{
	"name": "RSS Filter Dev Container",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"github.vscode-github-actions"
			]
		}
	},
	"remoteUser": "vscode",
	"postCreateCommand": "npm install -g npm@latest wrangler && node --version && npm --version && wrangler --version"
}
